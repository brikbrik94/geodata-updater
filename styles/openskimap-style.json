{
  "version": 8,
  "name": "OpenSkiMap Overlay",
  "glyphs": "{TILES_BASE_URL}/assets/fonts/{fontstack}/{range}.pbf",
  "sources": {
    "ski_source": {
      "type": "vector",
      "url": "pmtiles://{TILES_BASE_URL}/openskimap.pmtiles",
      "attribution": "OpenSkiMap.org"
    }
  },
  "layers": [
    {
      "id": "ski-areas",
      "type": "fill",
      "source": "ski_source",
      "source-layer": "ski_areas_multipolygon",
      "minzoom": 8,
      "paint": {
        "fill-color": "rgba(200, 230, 255, 0.1)",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "ski-runs-alpine",
      "type": "line",
      "source": "ski_source",
      "source-layer": "runs_linestring",
      "filter": [
        "all",
        [
          "!=",
          [
            "get",
            "uses"
          ],
          "nordic"
        ],
        [
          "!",
          [
            "in",
            "hike",
            [
              "get",
              "uses"
            ]
          ]
        ]
      ],
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-width": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          10,
          2,
          13,
          3,
          15,
          5,
          18,
          8
        ],
        "line-color": [
          "match",
          [
            "get",
            "difficulty"
          ],
          "novice",
          "#00d000",
          "easy",
          "#0080ff",
          "intermediate",
          "#ff4040",
          "advanced",
          "#404040",
          "expert",
          "#ff8800",
          "freeride",
          "#ffcc00",
          "#999999"
        ]
      }
    },
    {
      "id": "ski-runs-nordic",
      "type": "line",
      "source": "ski_source",
      "source-layer": "runs_linestring",
      "filter": [
        "in",
        "nordic",
        [
          "get",
          "uses"
        ]
      ],
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-width": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          10,
          2,
          13,
          3,
          15,
          5,
          18,
          8
        ],
        "line-color": [
          "match",
          [
            "get",
            "difficulty"
          ],
          "novice",
          "#00d000",
          "easy",
          "#0080ff",
          "intermediate",
          "#ff4040",
          "advanced",
          "#404040",
          "expert",
          "#ff8800",
          "#0080ff"
        ]
      }
    },
    {
      "id": "ski-runs-winter-hiking",
      "type": "line",
      "source": "ski_source",
      "source-layer": "runs_linestring",
      "filter": [
        "all",
        [
          "in",
          "hike",
          [
            "get",
            "uses"
          ]
        ],
        [
          "!",
          [
            "in",
            "downhill",
            [
              "get",
              "uses"
            ]
          ]
        ]
      ],
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-width": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          10,
          1.5,
          13,
          2.5,
          15,
          4,
          18,
          7
        ],
        "line-color": "#00d000",
        "line-dasharray": [
          "literal",
          [
            3,
            2
          ]
        ]
      }
    },
    {
      "id": "ski-lifts-line",
      "type": "line",
      "source": "ski_source",
      "source-layer": "lifts_linestring",
      "paint": {
        "line-color": "#000000",
        "line-width": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          10,
          1,
          13,
          1.5,
          15,
          2,
          18,
          3
        ],
        "line-dasharray": [
          "literal",
          [
            4,
            2
          ]
        ]
      }
    },
    {
      "id": "ski-lifts-icons",
      "type": "symbol",
      "source": "ski_source",
      "source-layer": "lifts_linestring",
      "minzoom": 13,
      "layout": {
        "symbol-placement": "line",
        "symbol-spacing": 200,
        "icon-image": [
          "match",
          [
            "get",
            "lift_type"
          ],
          "gondola",
          "ski-gondola",
          "cable_car",
          "ski-cable-car",
          "funicular",
          "ski-funicular",
          "chair_lift",
          [
            "match",
            [
              "coalesce",
              [
                "get",
                "occupancy"
              ],
              4
            ],
            1,
            "ski-chairlift-1",
            2,
            "ski-chairlift-2",
            3,
            "ski-chairlift-3",
            4,
            "ski-chairlift-4",
            6,
            "ski-chairlift-6",
            8,
            "ski-chairlift-8",
            "ski-chairlift-4"
          ],
          [
            "drag_lift",
            "t-bar"
          ],
          "ski-drag-lift-tbar",
          [
            "platter",
            "j-bar"
          ],
          "ski-drag-lift-platter",
          "rope_tow",
          "ski-rope-tow",
          "magic_carpet",
          "ski-magic-carpet",
          "ski-drag-lift-tbar"
        ],
        "icon-size": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          13,
          0.5,
          15,
          0.7,
          18,
          1.0
        ],
        "icon-allow-overlap": false,
        "icon-rotation-alignment": "viewport"
      }
    },
    {
      "id": "ski-labels",
      "type": "symbol",
      "source": "ski_source",
      "source-layer": "runs_linestring",
      "minzoom": 14,
      "filter": [
        "has",
        "name"
      ],
      "layout": {
        "text-field": [
          "get",
          "name"
        ],
        "text-font": [
          "Noto-Sans-Regular"
        ],
        "text-size": 10,
        "symbol-placement": "line",
        "text-offset": [
          "literal",
          [
            0,
            1
          ]
        ]
      },
      "paint": {
        "text-color": "#333",
        "text-halo-color": "#fff",
        "text-halo-width": 1.5
      }
    }
  ]
}
